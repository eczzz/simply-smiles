---
// About Section Component - Simply Smiles
---

<section class="about">
  <!-- Left Column - Image Side -->
  <div class="about-left">
    <!-- Team Photo Frame -->
    <div class="photo-frame scroll-animate">
      <!-- Decorative Leaf Top Right -->
      <div class="leaf leaf-top">
        <img src="/leaf-top.svg" alt="" class="leaf-img" />
      </div>

      <div class="browser-bar">
        <div class="dot dot-blue"></div>
        <div class="dot dot-orange"></div>
        <div class="dot dot-green"></div>
      </div>
      <div class="photo-container">
        <img src="/team.jpg" alt="Simply Smiles Team" class="team-photo" />
      </div>

      <!-- Decorative Leaf Bottom Left -->
      <div class="leaf leaf-bottom">
        <img src="/leaf-bottom.svg" alt="" class="leaf-img" />
      </div>
    </div>
  </div>

  <!-- Right Column - Content Side -->
  <div class="about-right">
    <div class="about-content scroll-animate delay-1">
      <div class="about-badge">
        <span>About Us</span>
      </div>
      <h2 class="about-heading">Meet The Simply Smiles Team</h2>
      <p class="about-description">
        A team of multi-talented entertainers, led by a guy who turned his passion into Denver's most-loved party company.
      </p>
      <a href="/about" class="learn-more-btn">LEARN MORE</a>
    </div>

    <!-- Decorative Rainbow -->
    <div class="rainbow">
      <img src="/rainbow.svg" alt="" class="rainbow-img" />
    </div>
  </div>
</section>

<style>
  .about {
    width: 100%;
    display: flex;
    flex-direction: row;
  }

  /* Left Column - Image Side */
  .about-left {
    width: 50%;
    min-height: 716px;
    background: #FFC904;
    border-right: 4px solid #000000;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Photo Frame */
  .photo-frame {
    position: relative;
    width: 520px;
    background: #FAFAFA;
    border: 2px solid #000000;
    box-shadow: 6px 6px 0px #000000;
    display: flex;
    flex-direction: column;
    z-index: 1;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .photo-frame:hover {
    transform: translateY(-4px);
    box-shadow: 6px 10px 0px #000000;
  }

  .browser-bar {
    width: 100%;
    height: 32px;
    background: #FFFFFF;
    border-bottom: 4px solid #000000;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 10px;
    gap: 8px;
  }

  .dot {
    width: 13px;
    height: 13px;
    border-radius: 50%;
    transition: transform 0.2s ease;
  }

  .photo-frame:hover .dot {
    animation: dotBounce 0.5s ease;
  }

  .photo-frame:hover .dot-blue { animation-delay: 0s; }
  .photo-frame:hover .dot-orange { animation-delay: 0.1s; }
  .photo-frame:hover .dot-green { animation-delay: 0.2s; }

  .dot-blue {
    background: #5A8AFF;
  }

  .dot-orange {
    background: #EE5D24;
  }

  .dot-green {
    background: #62C07E;
  }

  .photo-container {
    width: 100%;
    height: 425px;
    overflow: hidden;
  }

  .team-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .photo-frame:hover .team-photo {
    transform: scale(1.05);
  }

  /* Decorative Leaves */
  .leaf {
    position: absolute;
    z-index: 10;
  }

  .leaf-img {
    width: 82px;
    height: auto;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .photo-frame:hover .leaf-top .leaf-img {
    animation: leafSway 0.6s ease;
  }

  .photo-frame:hover .leaf-bottom .leaf-img {
    animation: leafSway 0.6s ease 0.1s;
  }

  .leaf-top {
    top: -30px;
    right: -40px;
    transform: scaleX(-1) rotate(250deg);
  }

  .leaf-bottom {
    bottom: -30px;
    left: -40px;
    transform: rotate(-11.22deg);
  }

  /* Right Column - Content Side */
  .about-right {
    width: 50%;
    min-height: 716px;
    background: #24A096;
    position: relative;
    display: flex;
    align-items: center;
  }

  .about-content {
    width: 520px;
    margin-left: 100px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .about-badge {
    width: auto;
    height: 32px;
    background: #FD91E7;
    border: 2px solid #000000;
    box-shadow: 6px 6px 0px #000000;
    transform: rotate(-4.93deg);
    padding: 4px 16px;
    display: flex;
    justify-content: center;
    align-items: center;
    align-self: flex-start;
    white-space: nowrap;
  }

  .about-badge span {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 18px;
    text-transform: capitalize;
    color: #000000;
  }

  .about-badge {
    transition: transform 0.3s ease;
  }

  .about-badge:hover {
    animation: badgeWiggle 0.5s ease;
  }

  .about-heading {
    width: 520px;
    font-family: 'Black Han Sans', sans-serif;
    font-size: 64px;
    line-height: 75px;
    text-transform: capitalize;
    color: #FFC904;
    -webkit-text-stroke: 1.5px #000000;
    text-shadow: 6px 6px 0px #000000;
    margin: 0;
  }

  .about-description {
    width: 520px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 500;
    font-size: 18px;
    line-height: 28px;
    color: #000000;
    margin: 0;
  }

  .learn-more-btn {
    width: 176px;
    height: 56px;
    background: #FF7050;
    border: 2px solid #000000;
    box-shadow: 6px 6px 0px #000000;
    padding: 16px 24px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 18px;
    text-transform: uppercase;
    color: #FAFAFA;
    text-decoration: none;
    cursor: pointer;
    white-space: nowrap;
    transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
  }

  .learn-more-btn:hover {
    transform: translateY(-4px);
    box-shadow: 6px 10px 0px #000000;
    background: #e5634a;
  }

  /* Decorative Rainbow */
  .rainbow {
    position: absolute;
    right: 5rem;
    bottom: -10px;
    z-index: 1;
  }

  .rainbow-img {
    width: 350px;
    height: auto;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .rainbow:hover .rainbow-img {
    animation: rainbowBounce 0.6s ease;
  }

  /* Hover Animations */
  @keyframes dotBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  @keyframes leafSway {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-8deg); }
    75% { transform: rotate(8deg); }
  }

  @keyframes badgeWiggle {
    0%, 100% { transform: rotate(-4.93deg); }
    25% { transform: rotate(-8deg); }
    75% { transform: rotate(-1deg); }
  }

  @keyframes rainbowBounce {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-10px) scale(1.05); }
  }

  /* Responsive - Tablet */
  @media (max-width: 1439px) {
    .about-left,
    .about-right {
      min-height: 600px;
    }

    .photo-frame {
      width: 420px;
    }

    .photo-container {
      height: 350px;
    }

    .about-content {
      width: 100%;
      margin-left: 60px;
      margin-right: 60px;
    }

    .about-heading {
      width: 100%;
      font-size: 52px;
      line-height: 62px;
    }

    .about-description {
      width: 100%;
    }

    .rainbow {
      right: 40px;
      bottom: -5px;
      width: 200px;
      height: 100px;
    }

    .rainbow-yellow {
      width: 200px;
      height: 100px;
    }

    .rainbow-orange {
      width: 150px;
      height: 75px;
    }

    .rainbow-pink {
      width: 100px;
      height: 50px;
    }
  }

  /* Responsive - Mobile */
  @media (max-width: 768px) {
    .about {
      flex-direction: column;
    }

    .about-left,
    .about-right {
      width: 100%;
      min-height: auto;
      border-right: none;
    }

    .about-left {
      padding: 60px 20px;
      border-bottom: 4px solid #000000;
    }

    .photo-frame {
      width: 100%;
      max-width: 400px;
    }

    .photo-container {
      height: 300px;
    }

    .leaf {
      display: none;
    }

    .about-right {
      padding: 60px 20px;
    }

    .about-content {
      width: 100%;
      margin: 0;
      align-items: center;
      text-align: center;
    }

    .about-badge {
      align-self: center;
      transform: rotate(0deg);
    }

    .about-heading {
      width: 100%;
      font-size: 42px;
      line-height: 50px;
    }

    .about-description {
      width: 100%;
    }

    .learn-more-btn {
      width: 100%;
      max-width: 280px;
    }

    .rainbow {
      display: none;
    }
  }
</style>
