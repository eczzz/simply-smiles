---
// Footer Section Component - Simply Smiles

const quickLinks = [
  { name: 'Services', href: '/services' },
  { name: 'Gallery', href: '/gallery' },
  { name: 'Testimonials', href: '/testimonials' },
  { name: 'Contact', href: '/contact' },
  { name: 'Terms', href: '/terms' },
  { name: 'Events', href: '/events' }
];

const supportLinks = [
  { name: 'FAQ', href: '/faq' },
  { name: 'Contact Us', href: '/contact' },
  { name: 'Community', href: '/community' }
];

const bottomLinks = [
  { name: 'Privacy & Cookies', href: '/privacy' },
  { name: 'Legal', href: '/legal' },
  { name: 'Accessibility', href: '/accessibility' },
  { name: 'Sitemap', href: '/sitemap' }
];

const socialIcons = [
  { icon: 'fab fa-facebook-f', label: 'Facebook', href: '#' },
  { icon: 'fab fa-twitter', label: 'Twitter', href: '#' },
  { icon: 'fab fa-instagram', label: 'Instagram', href: '#' },
  { icon: 'fab fa-linkedin', label: 'LinkedIn', href: '#' },
  { icon: 'fab fa-youtube', label: 'YouTube', href: '#' }
];
---

<footer class="footer">
  <!-- Footer Top Section -->
  <div class="footer-top">
    <div class="footer-content">
      <!-- Column 1 - Brand Box -->
      <div class="brand-box">
        <img src="/cropped-SimplySmilesDenverEntertainer-1 1.png" alt="Simply Smiles Logo" class="brand-logo" />
        <p class="brand-description">
          When you book Simply Smiles, you're not just hiring an entertainer — you're getting a passionate professional team who genuinely loves what they do.
        </p>
      </div>

      <!-- Column 2 - Quick Links -->
      <div class="footer-column">
        <h3 class="footer-heading">Quick Links</h3>
        <nav class="footer-links">
          {quickLinks.map((link) => (
            <a href={link.href} class="footer-link">{link.name}</a>
          ))}
        </nav>
      </div>

      <!-- Column 3 - Support -->
      <div class="footer-column support-column">
        <h3 class="footer-heading">Support</h3>
        <nav class="footer-links">
          {supportLinks.map((link) => (
            <a href={link.href} class="footer-link">{link.name}</a>
          ))}
        </nav>

        <!-- Contact Info Boxes -->
        <div class="contact-boxes">
          <div class="contact-box">
            <div class="contact-icon phone-icon">
              <i class="fas fa-phone"></i>
            </div>
            <div class="contact-text">
              <span>(021) 345-6789</span>
            </div>
          </div>

          <div class="contact-box">
            <div class="contact-icon email-icon">
              <i class="fas fa-envelope"></i>
            </div>
            <div class="contact-text">
              <span>customer@example.com</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Column 4 - Stay in Touch -->
      <div class="footer-column stay-column">
        <h3 class="footer-heading">Stay in Touch</h3>
        <p class="stay-description">
          Keep up to date on social media or contact us with any other information.
        </p>

        <!-- Social Media Icons -->
        <div class="social-icons">
          {socialIcons.map((social) => (
            <a href={social.href} class="social-icon" aria-label={social.label}>
              <i class={social.icon}></i>
            </a>
          ))}
        </div>

        <!-- Decorative Confetti -->
        <div class="footer-confetti">
          <img src="/conffitte.svg" alt="" class="confetti-img" />
        </div>
      </div>

      <!-- Decorative Party Popper -->
      <div class="party-popper">
        <img src="/party-popper.svg" alt="" class="popper-img" />
      </div>
    </div>
  </div>

  <!-- Divider -->
  <div class="footer-divider"></div>

  <!-- Footer Bottom Section -->
  <div class="footer-bottom">
    <p class="copyright">© 2026 Simply Smiles. All Rights Reserved.</p>
    <nav class="bottom-links">
      {bottomLinks.map((link) => (
        <a href={link.href} class="bottom-link">{link.name}</a>
      ))}
    </nav>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    position: relative;
  }

  /* Footer Top Section */
  .footer-top {
    width: 100%;
    background: #24A096;
    padding: 100px 100px 60px 100px;
  }

  .footer-content {
    width: 100%;
    max-width: 1240px;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    gap: 40px;
    align-items: flex-start;
    position: relative;
  }

  /* Brand Box */
  .brand-box {
    width: 327px;
    min-width: 327px;
    background: #FD91E7;
    border: 2px solid #000000;
    box-shadow: 6px 6px 0px #000000;
    padding: 32px;
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .brand-logo {
    width: 151px;
    height: 70px;
    object-fit: contain;
  }

  .brand-description {
    font-family: 'Montserrat', sans-serif;
    font-weight: 500;
    font-size: 18px;
    line-height: 28px;
    color: #000000;
    margin: 0;
  }

  /* Footer Columns */
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .support-column {
    width: 380px;
  }

  .stay-column {
    width: 344px;
    flex-grow: 1;
  }

  /* Footer Headings */
  .footer-heading {
    font-family: 'Black Han Sans', sans-serif;
    font-size: 30px;
    line-height: 40px;
    color: #FFC904;
    -webkit-text-stroke: 1px #000000;
    text-shadow: 2px 2px 0px #000000;
    margin: 0;
  }

  /* Footer Links */
  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .footer-link {
    font-family: 'Montserrat', sans-serif;
    font-weight: 500;
    font-size: 18px;
    line-height: 28px;
    color: #000000;
    text-decoration: none;
  }

  .footer-link:hover {
    text-decoration: underline;
  }

  /* Contact Boxes */
  .contact-boxes {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-top: 16px;
  }

  .contact-box {
    width: 320px;
    height: 44px;
    border: 2px solid #000000;
    box-shadow: 4px 4px 0px #000000;
    display: flex;
    flex-direction: row;
    overflow: hidden;
  }

  .contact-icon {
    width: 44px;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-right: 2px solid #000000;
    flex-shrink: 0;
  }

  .contact-icon i {
    font-size: 18px;
    color: #000000;
  }

  .phone-icon {
    background: #FD91E7;
  }

  .email-icon {
    background: #FFC904;
  }

  .contact-text {
    flex: 1;
    background: #FAFAFA;
    display: flex;
    align-items: center;
    padding: 0 60px 0 16px;
  }

  .contact-text span {
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    font-size: 15px;
    color: #000000;
  }

  /* Stay in Touch */
  .stay-description {
    font-family: 'Montserrat', sans-serif;
    font-weight: 500;
    font-size: 18px;
    line-height: 28px;
    color: #000000;
    margin: 0;
  }

  /* Social Icons */
  .social-icons {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 24px;
  }

  .social-icon {
    width: 32px;
    height: 32px;
    background: #FF7050;
    border: 1px solid #000000;
    box-shadow: 3px 3px 0px #000000;
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
  }

  .social-icon i {
    font-size: 16px;
    color: #000000;
  }

  /* Party Popper */
  .party-popper {
    position: absolute;
    right: 0;
    bottom: -60px;
  }

  .popper-img {
    width: 147px;
    height: auto;
    object-fit: contain;
  }

  /* Divider */
  .footer-divider {
    width: 100%;
    height: 0;
    border-top: 2px solid #000000;
  }

  /* Footer Confetti */
  .footer-confetti {
    margin-top: 16px;
    display: flex;
    justify-content: flex-end;
  }

  .confetti-img {
    width: 150px;
    height: auto;
    object-fit: contain;
  }

  /* Footer Bottom */
  .footer-bottom {
    width: 100%;
    background: #24A096;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 32px 100px;
    gap: 32px;
  }

  .copyright {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 18px;
    text-transform: capitalize;
    color: #000000;
    margin: 0;
  }

  .bottom-links {
    display: flex;
    flex-direction: row;
    gap: 32px;
  }

  .bottom-link {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 20px;
    line-height: 28px;
    text-transform: capitalize;
    color: #000000;
    text-decoration: none;
  }

  .bottom-link:hover {
    text-decoration: underline;
  }

  /* Responsive - Tablet */
  @media (max-width: 1200px) {
    .footer-top {
      padding: 60px 40px;
    }

    .footer-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 32px;
    }

    .brand-box {
      width: 100%;
      min-width: unset;
      grid-column: span 2;
      max-width: 100%;
    }

    .footer-column {
      width: 100%;
    }

    .support-column {
      width: 100%;
    }

    .stay-column {
      width: 100%;
    }

    .contact-box {
      width: 100%;
      max-width: 320px;
    }

    .party-popper {
      display: none;
    }

    .footer-bottom {
      padding: 24px 40px;
    }

    .bottom-links {
      flex-wrap: wrap;
      justify-content: flex-end;
      gap: 24px;
    }

    .bottom-link {
      font-size: 16px;
    }

    .footer-confetti {
      display: none;
    }
  }

  /* Responsive - Mobile */
  @media (max-width: 768px) {
    .footer-top {
      padding: 40px 20px;
    }

    .footer-content {
      display: flex;
      flex-direction: column;
      gap: 32px;
      align-items: center;
    }

    .brand-box {
      width: 100%;
      max-width: 100%;
      padding: 24px;
      align-items: center;
      text-align: center;
    }

    .brand-logo {
      margin: 0 auto;
    }

    .brand-description {
      font-size: 16px;
      line-height: 24px;
    }

    .footer-column {
      width: 100%;
      align-items: center;
      text-align: center;
    }

    .support-column,
    .stay-column {
      width: 100%;
    }

    .footer-links {
      align-items: center;
    }

    .contact-boxes {
      width: 100%;
      align-items: center;
    }

    .contact-box {
      width: 100%;
      max-width: 100%;
      height: 40px;
    }

    .contact-icon {
      width: 40px;
    }

    .contact-text {
      padding: 0 12px 0 12px;
      justify-content: center;
    }

    .contact-text span {
      font-size: 13px;
      word-break: break-word;
    }

    .footer-heading {
      font-size: 26px;
      line-height: 34px;
    }

    .social-icons {
      justify-content: center;
    }

    .stay-description {
      text-align: center;
    }

    .party-popper {
      display: none;
    }

    .footer-bottom {
      flex-direction: column;
      padding: 24px 20px;
      gap: 24px;
      text-align: center;
    }

    .copyright {
      font-size: 14px;
    }

    .bottom-links {
      flex-direction: column;
      gap: 16px;
      align-items: center;
    }

    .bottom-link {
      font-size: 16px;
    }
  }
</style>
