---
// Hashtag Bar Component - Simply Smiles

const hashtags = [
  "#LaughwithDaniel",
  "#SimplySmiles",
  "#Danimal",
  "#PaintThatFace",
  "#AirbrushInk",
  "#FavorTown"
];
---

<section class="hashtag-bar">
  <div class="hashtag-track">
    {[...Array(4)].map(() => (
      <div class="hashtag-group">
        {hashtags.map((tag) => (
          <div class="tag">
            <span class="tag-text">{tag}</span>
            <div class="box"></div>
          </div>
        ))}
      </div>
    ))}
  </div>
</section>

<style>
  .hashtag-bar {
    position: relative;
    width: 100%;
    height: 64px;
    background: #000000;
    overflow: hidden;
    z-index: 5;
  }

  .hashtag-track {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100%;
    width: max-content;
    animation: scroll 40s linear infinite;
    flex-wrap: nowrap;
  }

  .hashtag-group {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    flex-shrink: 0;
    flex-wrap: nowrap;
  }

  .tag {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
    height: 48px;
    flex-shrink: 0;
  }

  .tag-text {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 20px;
    line-height: 28px;
    text-transform: capitalize;
    color: #FAFAFA;
    white-space: nowrap;
    padding: 0 24px;
  }

  .box {
    width: 10px;
    height: 10px;
    background: #EE5D24;
    flex: none;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Pause animation on hover */
  .hashtag-bar:hover .hashtag-track {
    animation-play-state: paused;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .tag-text {
      font-size: 18px;
      padding: 0 20px;
    }
  }

  @media (max-width: 768px) {
    .hashtag-bar {
      height: 56px;
    }

    .tag-text {
      font-size: 16px;
      padding: 0 16px;
    }

    .hashtag-track {
      animation-duration: 30s;
    }
  }
</style>
