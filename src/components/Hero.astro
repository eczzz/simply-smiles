// Hero Component - Simply Smiles

// Generate confetti pieces with random properties
const colors = ['#d13447', '#ffbf00', '#263672'];
const confettiCount = 150;

const confettiPieces = Array.from({ length: confettiCount }, (_, i) => {
  const width = Math.floor(Math.random() * 12) + 4;
  const left = Math.floor(Math.random() * 100);
  const color = colors[Math.floor(Math.random() * 3)];
  const opacity = (Math.random() + 0.5).toFixed(2);
  const rotation = Math.floor(Math.random() * 360);
  const duration = (4 + Math.random()).toFixed(2);
  const delay = Math.random().toFixed(2);
  const drift = Math.floor(Math.random() * 15);

  return {
    id: i,
    width,
    height: (width * 0.4).toFixed(1),
    left,
    color,
    opacity,
    rotation,
    duration,
    delay,
    drift
  };
});
