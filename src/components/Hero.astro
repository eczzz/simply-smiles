<style>
  .hero {
    position: relative;
    z-index: 10;
    width: 100%;
    min-height: 100vh;
    padding-top: 73px;
    display: flex;
    align-items: center;
    overflow: visible;
    background-image: url('/home-hero-v2.webp');
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;
    background-attachment: scroll;
  }

  /* Confetti Animation */
  .confetti-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 3;
    pointer-events: none;
  }

  .confetti {
    position: absolute;
    top: -10%;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.68);
    z-index: 1;
  }

  .separator-header {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 0px;
    position: absolute;
    width: 110vw;
    height: 109px;
    left: -5vw;
    bottom: -50px;
    transform: rotate(-2.32deg);
    z-index: 10;
  }

  .line {
    box-sizing: border-box;
    width: 100%;
    flex: none;
    align-self: stretch;
    flex-grow: 0;
  }

  .line-yellow {
    height: 36px;
    background: var(--primary);
    border-width: 2px 0px;
    border-style: solid;
    border-color: var(--black);
    order: 0;
  }

  .line-orange {
    height: 37px;
    background: var(--brand);
    border-bottom: 2px solid var(--black);
    order: 1;
  }

  .line-pink {
    height: 36px;
    background: var(--tertiary);
    border-bottom: 2px solid var(--black);
    order: 2;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    width: 813px;
    margin-left: 100px;
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .hero-heading-wrapper {
    position: relative;
    width: 813px;
  }

  .hero-heading {
    width: 813px;
    font-family: 'Black Han Sans', sans-serif;
    font-size: 75px;
    line-height: 80px;
    text-transform: uppercase;
    color: var(--primary);
    -webkit-text-stroke: 1.5px var(--black);
    text-shadow: 6px 6px 0px var(--black);
    margin-bottom: 16px;
    opacity: 0;
    animation: slideUp 0.8s ease-out 0.2s forwards;
  }

  .hero-deco {
    position: absolute;
    top: calc(-20px + 2rem);
    right: calc(-180px + 4rem);
    width: 375px;
    height: auto;
    opacity: 0;
    animation: fadeIn 0.6s ease-out 0.5s forwards,
               float 4s ease-in-out 1.2s infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    25% {
      transform: translateY(-12px) rotate(2deg);
    }
    50% {
      transform: translateY(-6px) rotate(-1deg);
    }
    75% {
      transform: translateY(-15px) rotate(1deg);
    }
  }

  .hero-subheading {
    width: 813px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 20px;
    line-height: 30px;
    color: var(--black);
    opacity: 0;
    animation: slideUp 0.8s ease-out 0.6s forwards;
  }

  .hero-cta {
    width: fit-content;
    height: 72px;
    background: var(--secondary);
    border: 1px solid var(--black);
    box-shadow: 6px 6px 0px var(--black);
    padding: 24px 40px;
    margin-top: 24px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 18px;
    text-transform: uppercase;
    color: var(--light);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    opacity: 0;
    animation: slideUp 0.8s ease-out 0.9s forwards;
    transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
  }

  .hero-cta:hover {
    transform: translateY(-4px);
    box-shadow: 6px 10px 0px var(--black);
    background: #1d8a81;
  }

  /* Entry Animations */
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes decoWobble {
    0%, 100% { transform: rotate(0deg) scale(1); }
    25% { transform: rotate(-5deg) scale(1.05); }
    50% { transform: rotate(3deg) scale(1.02); }
    75% { transform: rotate(-2deg) scale(1.03); }
  }

  /* Large Screens */
  @media (min-width: 1441px) {
    .hero {
      min-height: 100vh;
      height: 100vh;
      background-position: center top;
      background-size: cover;
    }
  }

  /* Extra Large Screens */
  @media (min-width: 1920px) {
    .hero {
      background-position: center top;
    }
  }

  /* Tablet Responsive */
  @media (max-width: 1200px) {
    .hero {
      height: auto;
      min-height: 800px;
      padding: 100px 40px 120px 40px;
      background-position: center top;
    }

    .hero-content {
      width: 100%;
      margin-left: 0;
      gap: 32px;
    }

    .hero-heading-wrapper {
      width: 100%;
    }

    .hero-heading {
      width: 100%;
      font-size: 60px;
      line-height: 68px;
    }

    .hero-deco {
      display: none;
    }

    .hero-subheading {
      width: 100%;
      font-size: 18px;
      line-height: 28px;
    }

    .separator-header {
      width: 200vw;
      left: -50vw;
      bottom: -40px;
    }
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero {
      height: auto;
      min-height: 100svh;
      padding: 100px 20px 120px 20px;
      background-position: center center;
    }

    .hero-content {
      width: 100%;
      margin-left: 0;
      gap: 24px;
    }

    .hero-heading-wrapper {
      width: 100%;
    }

    .hero-heading {
      width: 100%;
      font-size: 42px;
      line-height: 48px;
      text-shadow: 4px 4px 0px var(--black);
    }

    .hero-deco {
      display: none;
    }

    .hero-subheading {
      width: 100%;
      font-size: 16px;
      line-height: 24px;
    }

    .hero-cta {
      width: 100%;
      height: 64px;
      margin-top: 12px;
      box-shadow: 6px 6px 0px var(--black);
    }

    .hero-cta:hover {
      box-shadow: 6px 10px 0px var(--black);
    }

    .separator-header {
      width: 200vw;
      left: -50vw;
      bottom: -30px;
    }

    .line {
      width: 100%;
    }
  }
</style>
