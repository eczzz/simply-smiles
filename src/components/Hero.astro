        class="confetti"
        style={`
          width: ${piece.width}px;
          height: ${piece.height}px;
          background-color: ${piece.color};
          left: ${piece.left}%;
          opacity: ${piece.opacity};
          transform: rotate(${piece.rotation}deg);
          animation: drop-${piece.id} ${piece.duration}s ${piece.delay}s forwards;
        `}
