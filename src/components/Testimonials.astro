      </div>
      <div class="google-rating">
        <div class="rating-row">
          <span class="rating-text">Excellent</span>
          <div class="stars">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
          </div>
        </div>
        <span class="review-count">4.9 | 73 Reviews</span>
      </div>
    </div>
  </div>

  <div class="testimonials-cards">
    {testimonials.map((testimonial, index) => (
      <div class={`testimonial-card scroll-animate delay-${index + 1}`}>
        <div class="card-header">
          <div class="google-icon">
            <span class="g-letter">G</span>
          </div>
          <div class="star-badge">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
          </div>
        </div>
        <div class="card-content">
          <h3 class="reviewer-name">{testimonial.name}</h3>
          <p class="review-text">{testimonial.review}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .testimonials {
    position: relative;
    width: 100%;
    background: #24A096;
    padding: 120px 78px 80px 78px;
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  .testimonials-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
  }

  .testimonials-heading {
    width: 628px;
    font-family: 'Black Han Sans', sans-serif;
    font-size: 64px;
    line-height: 75px;
    text-transform: capitalize;
    color: #FFC904;
    -webkit-text-stroke: 1.5px #000000;
    text-shadow: 6px 6px 0px #000000;
    margin: 0;
  }

  .google-review-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
  }

  .google-badge {
    box-sizing: border-box;
    width: 301px;
    height: 104px;
    background: #FFFFFF;
    border: 2px solid #000000;
    box-shadow: 8px 8px 0px #000000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 16px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .google-badge:hover {
    transform: translateY(-4px);
    box-shadow: 8px 12px 0px #000000;
  }

  .google-logo {
    width: 264px;
    height: 89px;
  }

  .google-rating {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 4px;
  }

  .rating-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
  }

  .rating-text {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 18px;
    color: #000000;
  }

  .google-rating .stars {
    display: flex;
    gap: 4px;
  }

  .google-rating .stars i {
    color: #FFC904;
    font-size: 16px;
    transition: transform 0.2s ease;
  }

  .google-rating .stars:hover i {
    animation: starPop 0.4s ease forwards;
  }

  .google-rating .stars:hover i:nth-child(1) { animation-delay: 0s; }
  .google-rating .stars:hover i:nth-child(2) { animation-delay: 0.05s; }
  .google-rating .stars:hover i:nth-child(3) { animation-delay: 0.1s; }
  .google-rating .stars:hover i:nth-child(4) { animation-delay: 0.15s; }
  .google-rating .stars:hover i:nth-child(5) { animation-delay: 0.2s; }

  .review-count {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 18px;
    color: #000000;
  }

  .testimonials-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 50px;
    max-width: 1300px;
    margin: 0 auto;
  }

  .testimonial-card {
    width: 100%;
    min-height: 276px;
    background: #FAFAFA;
    border: 2px solid #000000;
    box-shadow: 6px 6px 0px #000000;
    padding: 32px;
    display: flex;
    flex-direction: column;
    gap: 24px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-8px);
    box-shadow: 6px 14px 0px #000000;
  }

  .card-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 44.22px;
  }

  .google-icon {
    width: 43.83px;
    height: 44.22px;
    background: #FFC904;
    border: 1px solid #000000;
    box-shadow: 3px 3px 0px #000000;
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .testimonial-card:hover .google-icon {
    animation: bounce 0.5s ease;
  }

  .g-letter {
    font-family: 'Arial', sans-serif;
    font-weight: 700;
    font-size: 28px;
    color: #000000;
  }

  .star-badge {
    width: 188.1px;
    height: 30.22px;
    background: #4285f4;
    border: 1px solid #000000;
    box-shadow: 6px 6px 0px #000000;
    padding: 4px 16px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: transform 0.3s ease;
  }

  .testimonial-card:hover .star-badge {
    animation: wiggle 0.5s ease;
  }

  .star-badge i {
    color: #FFC904;
    font-size: 16px;
    transition: transform 0.2s ease;
  }

  .testimonial-card:hover .star-badge i {
    animation: starPop 0.4s ease forwards;
  }

  .testimonial-card:hover .star-badge i:nth-child(1) { animation-delay: 0s; }
  .testimonial-card:hover .star-badge i:nth-child(2) { animation-delay: 0.05s; }
  .testimonial-card:hover .star-badge i:nth-child(3) { animation-delay: 0.1s; }
  .testimonial-card:hover .star-badge i:nth-child(4) { animation-delay: 0.15s; }
  .testimonial-card:hover .star-badge i:nth-child(5) { animation-delay: 0.2s; }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .reviewer-name {
    font-family: 'Black Han Sans', sans-serif;
    font-size: 30px;
    line-height: 40px;
    letter-spacing: 0.01em;
    color: #000000;
    margin: 0;
  }

  .review-text {
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 22px;
    color: #000000;
    margin: 0;
    max-height: 88px;
    overflow: hidden;
  }

  /* Hover Animations */
  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
  }

  @keyframes wiggle {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-3deg); }
    75% { transform: rotate(3deg); }
  }

  @keyframes starPop {
    0% { transform: scale(1); }
    50% { transform: scale(1.3); }
    100% { transform: scale(1); }
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .testimonials {
      padding: 80px 40px;
    }

    .testimonials-cards {
      gap: 40px;
    }
  }

  /* 2 Column Layout for Tablets */
  @media (max-width: 900px) {
    .testimonials {
      padding: 60px 40px;
    }

    .testimonials-header {
      flex-direction: column;
      gap: 24px;
      align-items: center;
      text-align: center;
    }

    .testimonials-heading {
      width: 100%;
      font-size: 52px;
      line-height: 60px;
    }

    .testimonials-cards {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }
  }

  /* Single Column for Mobile */
  @media (max-width: 600px) {
    .testimonials {
      padding: 40px 20px;
      gap: 40px;
    }

    .testimonials-heading {
      font-size: 48px;
      line-height: 56px;
      padding-top: 40px;
    }

    .google-review-wrapper {
      display: none;
    }

    .testimonials-cards {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .testimonial-card {
      min-height: 250px;
    }
  }
</style>
